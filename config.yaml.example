# 肺PET/CT解析パイプライン設定ファイル
# このファイルをconfig.yamlとしてコピーして使用してください

# 処理対象のモダリティ（CT, PET, MR, SPECT から選択）
modalities:
  - CT
  - PET

# 抽出する臓器（TotalSegmentatorの出力ラベルを使用）
# 'all' を指定するとセグメンテーションされた全臓器を対象にします
# TotalSegmentatorは117の解剖学的構造に対応しています

# 推奨：代表臓器セット（臓器サイズ・生理集積・PV問題を横断的にカバー）
organs:
  # 大臓器・安定
  - liver
  - spleen
  # 中等度・生理集積あり
  - kidney_left
  - kidney_right
  # 小臓器・PV影響あり
  - adrenal_gland_left
  - adrenal_gland_right
  # 参照領域（blood pool）
  - aorta
  # 骨髄（代表）
  - vertebrae_L1

# 全臓器を対象にする場合:
# organs:
#   - all

# 肺・胸部のみの場合:
# organs:
#   - lung_upper_lobe_left
#   - lung_lower_lobe_left
#   - lung_upper_lobe_right
#   - lung_middle_lobe_right
#   - lung_lower_lobe_right
#   - heart
#   - aorta
#   - trachea
#   - esophagus

# セグメンテーション設定
segmentation:
  # モダリティごとのTotalSegmentatorタスク
  tasks:
    CT: total           # CTは標準タスク
    MR: total_mr        # MRはMR専用タスク
    PET: use_ct_mask    # PETはCTマスクを使用
    SPECT: use_ct_mask  # SPECTはCTマスクを使用

  # 高速モード（精度よりも速度優先）
  fast: true

  # 抽出する臓器のサブセット
  # null または コメントアウトで全117臓器を抽出
  # 特定の臓器のみを抽出する場合はリストで指定
  roi_subset: null  # 全臓器を抽出（推奨）

  # 胸部のみの場合の例:
  # roi_subset:
  #   - lung_upper_lobe_left
  #   - lung_lower_lobe_left
  #   - lung_upper_lobe_right
  #   - lung_middle_lobe_right
  #   - lung_lower_lobe_right
  #   - heart
  #   - aorta
  #   - trachea
  #   - esophagus

# 出力設定
output:
  # 結果CSVファイル名
  csv_file: radiomics_results.csv

  # 診断情報を含めるか（True: 全てのpyradiomics出力を保存）
  include_diagnostics: false
